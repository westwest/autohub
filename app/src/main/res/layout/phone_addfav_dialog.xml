<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/phone_slot_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Slot"
        android:gravity="center"
        android:padding="16dp"
        android:background="#333"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/phone_add_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Create"
            android:drawableTop="@drawable/ic_create"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/phone_add_from_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contacts"
            android:drawableTop="@drawable/ic_contacts"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>